{% block user_password_form %}
    <form class="m-t" role="form" method="post" action="{{ request.url }}">
        {{ form.secure_form(request) }}     
        {% block user_password_form_passwords %}
            <div class="form-group row"><label class="col-sm-2 col-form-label">{{ _('New password') }}</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" name="user_password">
                </div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group row"><label class="col-sm-2 col-form-label">{{ _('Password confirmation') }}</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" name="user_password2">
                </div>
            </div>
            <div class="hr-line-dashed"></div>
        {% endblock user_password_form_passwords %}
        
        {% block user_password_form_actions %}
            <div class="form-group row">
                <div class="col-sm-4 col-sm-offset-2">
                    <button class="btn btn-danger btn-sm" type="submit" name="changepass">{{ _('Change password') }}</button>
                </div>
            </div>
        {% endblock user_password_form_actions %}
    </form>
{% endblock user_password_form %}