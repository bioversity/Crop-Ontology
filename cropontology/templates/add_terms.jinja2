{% extends 'page.jinja2' %}
{% import 'macros/form.jinja2' as form %}

{% block css %}
    {{ super() }}
    <style>
        .busy_overlay
        {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255,255,255,0.6);
            z-index:100000;
        }
        #busydiv
        {
            width: 200px;
            height: 200px;
            margin: auto;
            position: fixed;
            top: 0;
            right: 0;
            left: 0;
            bottom: 0;
        }
    </style>
{% endblock css %}

{% block main_container %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <h2 style="margin-left: 38px">Upload new terms into ontology "{{ ontology_data.ontology_name }}" ({{ ontology_data.ontology_id }})</h2>
                {{ form.display_errors(errors) }}
                <div class="card-body">
                    <form class="require_busy" id="form_upload_form" role="form" method="post" enctype="multipart/form-data" action="{{ request.url }}">
                        {{ form.secure_form(request) }}
                        <div class="card-body">
                            <div class="form-group">
                                <label for="exampleInputFile">{{ _('TD Excel file (xls / xlsx)') }}</label>
                                <div class="input-group">
                                    <div class="custom-file">
                                        <input id="xlsx" accept="*.xlsx" name="xlsx" type="file" class="custom-file-input">
                                        <label class="custom-file-label" for="xlsx">Choose file</label>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">{{ _('Submit file') }}</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div align="center" id="busy" class='busy_overlay' style="display: none;">
        <div id='busydiv'>
            <img alt="image" src="{{ request.url_for_static('busy.gif') }}" style="height: 200px; width: 200px"/>
        </div>
    </div>

{% endblock %}


{% block scripts %}
    {{ super() }}
    {% jsresource request,'main_library','bs-custom-file-input' %}
    <script type="text/javascript">
        $(document).ready(function () {
            bsCustomFileInput.init();
        });
    </script>
    <script>
        $( ".require_busy" ).submit(function( event ) {
            $("#busy").show();
        });
        {#$('.require_busy').onsubmit = function() {#}
        {#    $("#busy").show();#}

    </script>
{% endblock scripts %}

