<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                {% if ontology_name %}
                    <form class="form-inline ml-12" method="post"
                          action="{{ request.route_url('search', _query={"facet_ontology_name.keyword": ontology_name} ) }}">
                {% else %}
                    <form class="form-inline ml-12" method="post" action="{{ request.route_url('search') }}">
                {% endif %}
                <div class="input-group" style="width: 100%">

                    <input class="form-control form-control-navbar" name="searchtext" type="search" placeholder="Search"
                           aria-label="Search">
                    <div class="input-group-append">
                        <button class="btn btn-navbar" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>